{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./src",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "declaration": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": false,
    "noEmit": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ]
}